{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "types": ["vite/client"], // 新增类型声明
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.vue", ".vitepress/**/*"]
}
